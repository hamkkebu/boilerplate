# ============================================
# Hamkkebu Dev Environment - EKS + RDS Configuration
# ============================================
# 사용법:
# 1. 이 파일을 terraform.tfvars로 복사
# 2. 실제 값으로 변경
# 3. terraform.tfvars는 .gitignore에 추가되어 있음
# ============================================

project_name = "hamkkebu"
environment  = "dev"
aws_region   = "ap-northeast-2"

# ============================================
# VPC
# ============================================
vpc_cidr = "10.0.0.0/16"

# ============================================
# EKS Settings
# ============================================
eks_cluster_version     = "1.29"
eks_node_instance_types = ["t4g.medium"]
eks_node_desired_size   = 2
eks_node_min_size       = 1
eks_node_max_size       = 3

# ============================================
# RDS Settings (서비스별 3개)
# ============================================
db_instance_class          = "db.t4g.micro"
db_allocated_storage       = 20
db_backup_retention_period = 7
db_username                = "admin"

# 각 서비스별 DB 비밀번호 (필수 - 강력한 비밀번호 사용)
db_password_auth        = "YourAuthDbPassword123!"
db_password_ledger      = "YourLedgerDbPassword123!"
db_password_transaction = "YourTransactionDbPassword123!"

# ============================================
# GitHub Actions
# ============================================
create_github_actions_user = true

# ============================================
# 예상 월 비용 (~$250)
# ============================================
# - EKS Control Plane: $73
# - EC2 Worker Nodes (t4g.medium x 2): ~$60
# - RDS (db.t4g.micro x 3): ~$45
# - NAT Gateway: ~$45
# - ALB: ~$22
# - EBS/Storage: ~$10
